<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listViewInterventions_codis"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/list_empty_interventions_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="hey"
        android:visibility="gone"
        android:layout_gravity="center" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/action_create_intervention"
        android:id="@+id/button_create_intervention"
        android:layout_gravity="center_horizontal"
        android:onClick="showDialogIntervention"/>
</LinearLayout>